@model IEnumerable<Cover>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Cover List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Cover" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; new Cover
            </a>
        </div>
    </div>
</div>

<table class=table table-bordered table-striped">
    <thead>
        <tr>
            <th>Cover Name</th>
            <th>Id</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>
                    @obj.Name
                </td>
                <td>
                    @obj.Id
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Cover" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                    </div>
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Cover" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-trash-full"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>